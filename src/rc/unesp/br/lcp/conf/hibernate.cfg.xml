<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/projeto?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="rc/unesp/br/lcp/beans/Banco.hbm.xml"/>
    <mapping resource="rc/unesp/br/lcp/beans/Divida.hbm.xml"/>
    <mapping resource="rc/unesp/br/lcp/beans/Usuario.hbm.xml"/>
    <mapping resource="rc/unesp/br/lcp/beans/Conta.hbm.xml"/>
    <mapping resource="rc/unesp/br/lcp/beans/Contabancaria.hbm.xml"/>
    <mapping resource="rc/unesp/br/lcp/beans/Login.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
